# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# CI/CD Variables
CI_PROJECT_DIR=/path/to/your/project
CI_COMMIT_BRANCH=main

# SSH Connection
ANSIBLE_RUN_SSH_USER=your_ssh_user
ANSIBLE_RUN_SSH_PASSWORD=your_ssh_password
ANSIBLE_RUN_SSH_PRIVATE_KEY=base64_encoded_private_key
ANSIBLE_RUN_VAULT_KEY=base64_encoded_vault_key

# Container Registry
CONTAINER_REGISTRY=your-registry.com
CONTAINER_REGISTRY_USER=your_registry_user
CONTAINER_REGISTRY_PASSWORD=your_registry_password
CONTAINER_IMAGE_VERSION=latest

# PHP Configuration
PHP_VERSION=8.2
NGINX_HOST=your-nginx-host
XDEBUG_CLIENT_HOST=your-debug-host
XDEBUG_PORT=9003
XDEBUG_TRIGGER=your-trigger
PHP_IDE_CONFIG=your-ide-config

# Database Configuration
POSTGRES_DB=your_database_name
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# Service Ports
MEMCACHED_PORT=11211
MAILHOG_PORT_SMTP=1025
MAILHOG_PORT_HTTP=8025

# SSH Target Configuration
SSH_USERNAME=your_target_user
SSH_SERVER=your_target_server
SSH_TARGET_DIR=/path/to/target/directory

# Ansible Configuration
ANSIBLE_RUN_CMD=your_ansible_command
